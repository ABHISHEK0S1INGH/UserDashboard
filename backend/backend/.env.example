# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development

# Security Keys (Generate using: python3 -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here-generate-with-secrets-module
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-with-secrets-module

# Database Configuration
# PostgreSQL (production recommended):
DATABASE_URL=postgresql+psycopg://username:password@localhost:5432/dbname

# SQLite (development only):
# DATABASE_URL=sqlite:///app.db

# CORS Configuration (comma-separated origins for production)
CORS_ORIGINS=http://localhost:5173

# Production settings (override in production environment)
# FLASK_ENV=production
# SECRET_KEY=<generated-production-secret>
# JWT_SECRET_KEY=<generated-production-secret>
# DATABASE_URL=<production-postgresql-url>
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
